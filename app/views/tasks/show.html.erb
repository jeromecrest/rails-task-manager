<h1><%= @task.title %></h1>
<p><%=  @task.details%></p>
<% if @task.completed %>
<input type="checkbox" checked>
<p>This task is completed</p>
<% else  %>
<input type="checkbox">
<p>This task is not completed</p>
<% end %>
<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit task', edit_task_path  %>
